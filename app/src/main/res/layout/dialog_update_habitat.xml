<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_update_habitat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Habitat Name" />

    <EditText
        android:id="@+id/et_update_habitat_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Habitat Description" />

    <EditText
        android:id="@+id/et_update_habitat_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Habitat Image URL" />

    <Button
        android:id="@+id/btn_confirm_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Habitat" />
</LinearLayout>