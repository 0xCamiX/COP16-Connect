<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.admin.AdminActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COP16 Connect"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_manage_species"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Species"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_manage_locations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Locations"
        app:layout_constraintTop_toBottomOf="@id/btn_manage_species"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_manage_habitats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Habitats"
        app:layout_constraintTop_toBottomOf="@id/btn_manage_locations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_manage_habitats_locations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Habitats with Locations"
        app:layout_constraintTop_toBottomOf="@id/btn_manage_habitats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_manage_events"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Events"
        app:layout_constraintTop_toBottomOf="@id/btn_manage_habitats_locations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_manage_users"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Users"
        app:layout_constraintTop_toBottomOf="@id/btn_manage_events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>